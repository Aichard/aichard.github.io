// layout into two columns
.columns, .left-column, .main-column, .right-column
  display: block
  padding: 0.75rem
@media screen and (min-width: 768px)
  .columns
    display: flex
  .left-column, .right-column
    width: (1 / 3) * 100%
  .left-column
    order: 1
  .main-column
    order: 2
    width: (2 / 3) * 100%
  .right-column
    display: none
// big screen layout, layout into three columns
@media screen and (min-width: 1280px)
  .left-column .display-when-two-columns
    display: none
  .main-column
    width: 52%
  .left-column, .right-column
    width: 24%
  .right-column
    order: 3
    display: block