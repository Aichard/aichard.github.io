.image
  display: block
  position: relative
  img
    display: block
    width: 100%
    height: 300px
.thumb
  object-fit: cover
.thumb-img
  bottom: 0
  top: 0
  left: 0
  right: 0
  position: absolute
.card-image
  overflow: hidden
  border-radius: 4px 4px 0 0
.post-img.lazy:not(.loaded), .thumb-img.lazy:not(.loaded)
  visibility: hidden
@media screen and (min-width: 768px)
  .thumb-index
    padding-top: 300px