.image
  display: block
  position: relative
  img
    display: block
    width: 100%
    height: 300px
.thumb
  object-fit: cover
.thumb-img
  bottom: 0
  top: 0
  left: 0
  right: 0
  position: absolute
a.card-image
  border-style: none
.card-image
  overflow: hidden
  border-radius: 4px 4px 0 0
@media screen and (min-width: 768px)
  .thumb-index, .thumb-post
    padding-top: 300px
@media screen and (max-width: 767px)
  .thumb-index, .thumb-post
    height: 16.48rem