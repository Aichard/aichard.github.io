.footer
  background-color: $background-color
  width: 100%
  box-shadow: $shadow-style
  position: absolute
  padding-top: 20px
  padding-bottom: 20px
  bottom: 0
  .footer-container
    color: $info-text-color
    display: flex
    justify-content: center
    .copyright
      margin-right: 80px
    a
      color: $link-color
      &:hover
        color: $link-hover-color

@media (max-width : 902px)
  .footer
    .footer-container
      display: block
      .copyright
        margin-right: 0
        display: flex
        justify-content: center
        margin-bottom: 6px;
      .footer-dsc
        display flex
        justify-content: center
