// default footer
.footer
  font-size: $sm-font-size
  background-color: $widget-background-color
  width: 100%
  box-shadow: $shadow-style
  padding: 3rem 1.5rem 6rem
  bottom: 0
  .footer-container
    color: $info-text-color
    display: flex
    justify-content: space-between
    .copyright
      margin-right: 80px
    .footer-dsc
      display: flex
    a
      color: $text-strong-color
      &:hover
        color: $link-hover-color
// mobiles footer
@media (max-width: 902px)
  .footer
    .footer-container
      display: block
      .copyright
        margin-right: 0
        display: flex
        justify-content: center
        margin-bottom: 6px
      .footer-dsc
        display: flex
        justify-content: center
@media (max-width: 425px)
  .footer
    .footer-dsc
      flex-direction: column
      span
        display: none
      div
        display: block
        text-align: center