.recent-posts-header
  border-top: 0.5px solid $divider-color
  height: 0.5px
  margin-top: 1px
  margin-bottom: 1px
  &::after
    background-color: $widget-background-color
    color: $text-light-color
    content: attr(data-content)
    font-size: $sm-font-size
    display: inline-block
    position: relative
    top: -12px
    padding-right: 8px
.recent-posts-list
  margin-top: 22px
  .recent-posts-item
    &:last-child .divider
      display: none
    .recent-posts-item-title
      font-size: $sm-font-size
    .recent-posts-item-content
      color: $text-color
      margin-top: 6px
      font-size: $ml-font-size
      padding-bottom: 6px
      &:hover
        cursor: pointer
        border-radius: 0.3rem
        background-color: $badge-background-color
        transition-duration: 0.2s
        transition-timing-function: ease-in-out
    + .recent-posts-item
      margin-top: 10px
    .divider
      height: 1px
      background-color: $divider-color
      width: 100%
      margin-top: 7px