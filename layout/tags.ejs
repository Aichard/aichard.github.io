<div class="card card-content">
  <div class="tags-page-title" style="margin-bottom: 0.6rem;"><%= __('tags.title') %></div>
  <div>共计<%= site.tags.data.length %>个标签</div>
</div>
<div class="card card-content">
  <div class="tags-card">
    <div class="tags-list">
      <% site.tags.data.sort((a, b) => (a.posts.data.length - b.posts.data.length)).reverse().forEach(function(item){ %>
      <a href="\tags\<%- item.name %>" title="<%- item.name %>"><div class="tags-list-item"><%= item.name %></div></a>
      <% }); %>
    </div>
  </div>
</div>