<article class="card">
  <div class="card-content">
    <header>
      <h1 class="post-title">
        <%- page.title %>
      </h1>
    </header>
    <div class="post-meta post-show-meta">
      <time datetime="<%= date_xml(page.date) _%>" style="display: flex; align-items: center;">
        <i class="iconfont icon-calendar" style="margin-right: 2px;"></i>
        <span><%= date(page.date) %></span>
      </time>
      <% if(page.categories.data.length) { %>
      <span class="dot"></span>
      <% for(const item of page.categories.data) { %>
      <a href="<%= item.path %>" class="post-meta-link"><%= item.name %></a>
      <% } %>
      <% } %>
    </div>
    </header>
    <div id="section" class="post-content">
      <%- page.content %>
    </div>
  </div>
</article>
<% if(theme.comment.enable && page.comment !== false) { %>
<div class="card card-content comment-card">
  <div class="comment-card-title">评论</div>
  <%- partial('_partial/plugins/comments/' + theme.comment.type) %>
</div>
<% } %>