<% site.posts.sort('date', -1).forEach(post => { %>
<div class="card card-content">
  <% if(post.banner_img) { %>
  <a href="/<%= post.path %>" class="card-image image thumb-index">
    <picture>
      <img data-src="<%= post.banner_img %>"
        src="data:image/svg+xml,%3Csvg%20xmlns='http://www.w3.org/2000/svg'%20viewBox='0%200%20700%20220'%3E%3C/svg%3E"
        alt="<%= post.title %>" class="lazy thumb thumb-img">
    </picture>
  </a>
  <% } %>
  <article class="card card-content">
    <a href="/<%= post.path %>">
      <h1 class="post-title">
        <%= post.title %>
      </h1>
    </a>
    <div class="card-excerpt">
      <% if(post.excerpt) { %>
      <%= strip_html(post.excerpt) %>
      <% } else { %>
      <%= strip_html(truncate( post.content, { length : 120 })) %>
      <% } %>
    </div>
    <div class="card-post-footer">
      <div class="post-meta">
        <time datetime="<%= date_xml(post.date) _%>" style="display: flex; align-items: center;">
          <i class="iconfont icon-calendar" style="margin-right: 2px;"></i>
          <span><%= date(post.date) %></span>
        </time>
        <% if(post.categories.data.length) { %>
        <span class="dot"></span>
        <% for(const item of post.categories.data) { %>
        <a href="<%= item.path %>" class="post-meta-link"><%= item.name %></a>
        <% } %>
        <% } %>
      </div>
      <a href="<%= url_for(post.path) %>"><%- __('readmore.title') %> </a>
    </div>
  </article>
</div>
<% }); %>